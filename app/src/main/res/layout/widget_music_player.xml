<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/widget_root"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- Current Song Player (Top Section) -->
    <LinearLayout
        android:id="@+id/widget_top_section"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/widget_queue_album_bg"
        android:padding="8dp"
        android:layout_marginBottom="12dp">

        <!-- Album Art -->
        <ImageView
            android:id="@+id/widget_album_art"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="fitXY"
            android:contentDescription="Album Art" />

        <!-- Song Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_song_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not Playing"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/widget_primary_text"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/widget_artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap to play"
                android:textSize="12sp"
                android:textColor="@color/widget_secondary_text"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>


        <!-- Like Button with Bun Background -->
        <FrameLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp">
            
            <!-- Bun Background -->
            <ImageView
                android:id="@+id/widget_like_button_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:contentDescription="Like Button Background" />
            
            <!-- Like Icon -->
            <ImageButton
                android:id="@+id/widget_like_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/star_fav"
                android:contentDescription="Like" />
        </FrameLayout>


        <!-- Play/Pause Button with Clover4Leaf Background -->
        <FrameLayout
            android:layout_width="44dp"
            android:layout_height="44dp">
            
            <!-- Clover4Leaf Background -->
            <ImageView
                android:id="@+id/widget_play_pause_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:contentDescription="Button Background" />
            
            <!-- Play/Pause Icon -->
            <ImageButton
                android:id="@+id/widget_play_pause"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/play"
                android:contentDescription="Play" />
        </FrameLayout>

    </LinearLayout>

    <!-- Queue Row - All 6 in horizontal line -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Queue Item 1 -->
        <ImageView
            android:id="@+id/queue_album_1"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_margin="4dp"
            android:scaleType="centerCrop"
            android:background="@drawable/widget_queue_album_bg"
            android:contentDescription="Queue Song 1" />

        <!-- Queue Item 2 -->
        <ImageView
            android:id="@+id/queue_album_2"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_margin="4dp"
            android:scaleType="centerCrop"
            android:background="@drawable/widget_queue_album_bg"
            android:contentDescription="Queue Song 2" />

        <!-- Queue Item 3 -->
        <ImageView
            android:id="@+id/queue_album_3"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_margin="4dp"
            android:scaleType="centerCrop"
            android:background="@drawable/widget_queue_album_bg"
            android:contentDescription="Queue Song 3" />

        <!-- Queue Item 4 -->
        <ImageView
            android:id="@+id/queue_album_4"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_margin="4dp"
            android:scaleType="centerCrop"
            android:background="@drawable/widget_queue_album_bg"
            android:contentDescription="Queue Song 4" />

        <!-- Queue Item 5 -->
        <ImageView
            android:id="@+id/queue_album_5"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_margin="4dp"
            android:scaleType="centerCrop"
            android:background="@drawable/widget_queue_album_bg"
            android:contentDescription="Queue Song 5" />

    </LinearLayout>

</LinearLayout>