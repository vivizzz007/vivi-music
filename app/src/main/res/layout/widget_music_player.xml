<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/widget_root"
    android:orientation="horizontal"
    android:background="@drawable/widget_background_expressive"
    android:padding="16dp"
    android:gravity="center_vertical">

    <!-- Album Art Section (Left, Large) -->
    <FrameLayout
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@drawable/widget_album_art_bg_expressive">
        
        <ImageView
            android:id="@+id/widget_album_art"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Album Art" />
    </FrameLayout>

    <!-- Right Content Column -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <!-- Top Row: Song Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/widget_song_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not Playing"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/widget_system_on_tertiary_container"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/widget_artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap to play"
                android:textSize="14sp"
                android:textColor="@color/widget_system_on_surface_variant"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Middle Row: Interactive Elements (Like Button + Play Pill) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <!-- Like Button (was Play Button spot) -->
            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/widget_play_button_shape_expressive">
                
                <ImageButton
                    android:id="@+id/widget_like_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="14dp"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:src="@drawable/star_fav"
                    android:tint="@color/widget_on_play_button_container"
                    android:contentDescription="Like" />
            </FrameLayout>
            
            <!-- Play/Pause Pill (was Progress Pill) -->
            <!-- Large clickable area for Play/Pause -->
            <FrameLayout
                android:id="@+id/widget_play_pause_container"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:clickable="true">
                
                <!-- Background Pill -->
                <ImageView
                    android:id="@+id/widget_play_pause_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/widget_progress_pill_bg"
                    android:scaleType="fitXY" />
                    
                <!-- Play Icon Centered (No Progress Bar) -->
                <ImageView
                     android:id="@+id/widget_play_pause"
                     android:layout_width="24dp"
                     android:layout_height="24dp"
                     android:layout_gravity="center"
                     android:src="@drawable/play"
                     android:tint="@color/widget_system_tertiary_container" />
            </FrameLayout>

        </LinearLayout>
        
        <!-- Bottom Row: Decorative Squiggle (Right Bottom aligned) -->
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="8dp">

             <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="24dp">
                 
                 <!-- Inactive Track -->
                 <ImageView
                    android:id="@+id/widget_progress_track"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/widget_wavy_progress_track"
                    android:scaleType="fitXY"
                    android:contentDescription="Progress Track" />

                 <!-- Active Fill (Clipped via Level) -->
                 <ImageView
                    android:id="@+id/widget_progress_fill"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/widget_wavy_progress_clip"
                    android:scaleType="fitXY"
                    android:contentDescription="Progress Fill" />
             </FrameLayout>
         </LinearLayout>
         
    </LinearLayout>

</LinearLayout>